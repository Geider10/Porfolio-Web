---
import html from "../icons/html.astro"
import css from "../icons/css.astro"
import js from "../icons/js.astro"
import Web from "../icons/web.astro"
const listProject = [
    {
        titulo:"Ecomerce de calzados",
        descripcion:"Es una app dinamica para hacer compras. Destaco API de Mercado Pago y un Chat Bot asistente.",
        img:"/images/ecomerce1.webp",
        web:"https://proyecto-final-desarrollo-web-gold.vercel.app/index.html",
        tag:[
            {name:"HTML",
            },
            {
            name: "CSS",
            },
            {name:"SASS",
            },
            {name:"Bootstrap",
            },
            {name:"JavaScript",
            },
        ]
    },
    {
        titulo:"Orden Day",
        descripcion:"Esta app organiza tu dia con tareas, es facil de usar y aprender. Incluye IA para crear las tareas automaticamente.",
        img:"/images/trello1.webp",
        web:"https://google.com",
        tag:[
            {name:"HTML",
            },
            {
            name: "CSS",
            },
            {
            name: "JavaScript",
            }
        ]
    }
]    

---
<style>
    article{
        width: 360px;
        height: auto;
        padding: 10px;
        border: 1px solid;
        border-radius: 10px;
    }
    h3{
        text-decoration: underline;
        font-size: 22px;
        font-weight: 700;
        display: inline-block;
        vertical-align: top; 
        margin-right: 5px;
    }
    p{
        margin-bottom:20px;
    }
    img{
        width: 100%;
        height: 200px;
    }
    div{
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 20px;
    }
    @media (max-width:400px){
        article{
            padding: 0;
            width: 300px;
        }
        h3{
            text-align: center;
            display: block;
            margin-bottom: 5px;
        }
        p{
            margin-bottom: 10px;
        }
        .btnDinamic{
            display: none;
        }
        img{
            height: 180px;
        }
        div{
            justify-content: center;
        }
    }
</style>
{
    listProject.map(({titulo,descripcion,img,tag,web})=>(
        <article>
            <h3 class="c-primario">{titulo} </h3>
            <a href={web} target="_blank" class="btnDinamic" data-modoLight> <Web></Web> Sitio web </a>
            <p>{descripcion}</p>
            <img src={img} alt={`Captura de pantalla del proyecto ${img}`}>
            <div>
                {tag.map((t)=>(
                    <span class="btnStatic"> {t.name}</span>
                ))}</div>
        </article>
    ))
}
